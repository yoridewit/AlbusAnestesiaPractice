                app:layout_constraintGuide_begin="505dp"/>

            <TextView
                android:id="@+id/tvKeuzeJkz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text="Kinderen"
                android:textColor="@color/primaryTextColor"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imgBaby"
                app:layout_constraintStart_toStartOf="@+id/imgBaby"
                app:layout_constraintTop_toBottomOf="@+id/imgBaby"/>

